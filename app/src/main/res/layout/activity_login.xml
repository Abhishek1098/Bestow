<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bestow.hackmhs.bestow.LoginActivity">

    <TextView
        android:id="@+id/LoginActivity_TextView_createAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Don't have an account? Create one."
        app:layout_constraintEnd_toEndOf="@+id/LoginActivity_LinearLayout"
        app:layout_constraintStart_toStartOf="@+id/LoginActivity_LinearLayout"
        app:layout_constraintTop_toBottomOf="@+id/LoginActivity_LinearLayout"
        android:textColor="@color/blue"/>

    <LinearLayout
        android:id="@+id/LoginActivity_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64">

        <EditText
            android:id="@+id/LoginActivity_EditText_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="@color/blue"
            android:textColorHighlight="@color/blue"
            android:textColorHint="@color/blue"
            android:shadowColor="@color/blue"
            android:textColorLink="@color/blue"
            android:backgroundTint="@color/blue"/>

        <EditText
            android:id="@+id/LoginActivity_EditText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/blue"
            android:textColorHighlight="@color/blue"
            android:textColorHint="@color/blue"
            android:shadowColor="@color/blue"
            android:textColorLink="@color/blue"
            android:backgroundTint="@color/blue"/>

        <Button
            android:id="@+id/LoginActivity_Button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login!"
            android:textColor="@color/blue"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="209dp"
        android:layout_height="177dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/LoginActivity_LinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/people" />

</android.support.constraint.ConstraintLayout>
