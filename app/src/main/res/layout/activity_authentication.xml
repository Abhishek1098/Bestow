<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bestow.hackmhs.bestow.AuthenticationActivity">

    <TextView
        android:id="@+id/AuthenticationActivity_TextView_login"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Already have an account? Log in."
        app:layout_constraintEnd_toEndOf="@+id/AuthenticationActivity_LinearLayout"
        app:layout_constraintStart_toStartOf="@+id/AuthenticationActivity_LinearLayout"
        app:layout_constraintTop_toBottomOf="@+id/AuthenticationActivity_LinearLayout" />

    <LinearLayout
        android:id="@+id/AuthenticationActivity_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/AuthenticationActivity_EditText_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/AuthenticationActivity_EditText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/AuthenticationActivity_Button_createAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account!" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
